<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - ขายปุ๋ยและน้ำยา</title>

        <environment names="Development">
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
            <link rel="stylesheet" href="~/css/site.css" />
        </environment>
        <environment names="Staging,Production">
            <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
                  asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
                  asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
            <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        </environment>
    </head>
    <body>
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand"><span class="glyphicon glyphicon-th" aria-hidden="true"></span> หจก.เจริญถาวร-ปุ๋ยน้ำยา</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if (Context.Request.Path.Value.Equals(@"/"))
                        {
                            <text>
                            <li class="active">
                            </text>
                        }
                        else
                        {
                            <text>
                            <li>
                            </text>
                        }
                        <a asp-controller="Home" asp-action="Index">หน้าแรก</a></li>
                        @if (Context.Request.Path.Value.Contains("Invoices"))
                        {
                            <text>
                            <li class="active">
                            </text>
                        }
                        else
                        {
                            <text>
                            <li>
                            </text>
                        }
                        <a asp-controller="Invoices" asp-action="Index">ขายสินค้า</a></li>
                        @if (Context.Request.Path.Value.Contains("Stock"))
                        {
                            <text>
                            <li class="active">
                                </text>
                        }
                        else
                        {
                            <text>
                        <li>
                            </text>
                        }<a asp-controller="Home" asp-action="Stock">คลังสินค้า</a></li>
                        @if (Context.Request.Path.Value.Contains("SummaryOfSale"))
                        {
                            <text>
                            <li class="active">
                                </text>
                        }
                        else
                        {
                            <text>
                        <li>
                            </text>
                        }<a asp-controller="Home" asp-action="SummaryOfSale">สรุปยอดการขาย</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">ตั้งค่าโปรแกรม <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Home" asp-action="SettingOfApplication">ทั่วไป</a></li>
                                <li><a asp-controller="Home" asp-action="SettingOfApplication">แก้ไขรายละเอียดลูกค้า</a></li>
                                <li><a asp-controller="Home" asp-action="SettingOfApplication">แก้ไขชนิดปุ๋ยน้ำยา</a></li>
                            </ul>
                        </li>
                    </ul>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2016 - หจก.เจริญถาวร</p>
            </footer>
        </div>

        <environment names="Development">
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
        </environment>
        <environment names="Staging,Production">
            <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                    asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                    asp-fallback-test="window.jQuery">
            </script>
            <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/bootstrap.min.js"
                    asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                    asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
            </script>
            <script src="~/js/site.min.js" asp-append-version="true"></script>
        </environment>

        @RenderSection("scripts", required: false)
    </body>
</html>
