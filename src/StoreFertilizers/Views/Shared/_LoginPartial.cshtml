@using System.Security.Claims

@if (User.IsSignedIn())
{
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-controller="Manage" asp-action="Index" title="Manage">Hello @User.GetUserName()!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Register" style="color: white;font-weight: bold;"><i class="glyphicon glyphicon-registration-mark"></i></a></li>
        <li><a asp-controller="Account" asp-action="Login" style="color: white;font-weight: bold;"><i class="glyphicon glyphicon-log-in"></i></a></li>
    </ul>
}
